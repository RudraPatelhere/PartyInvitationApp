@model IEnumerable<PartyInvitationApp.Models.PartyModels.Invitation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GuestName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuestEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GuestName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Party.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InvitationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InvitationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InvitationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
