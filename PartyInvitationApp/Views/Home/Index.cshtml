@model List<PartyInvitationApp.Models.PartyModels.Party>

@{
    ViewData["Title"] = "Home - Party Manager";
}

<h2>Party Manager</h2>
<p>Manage your parties and invitations here.</p>

<a asp-controller="Parties" asp-action="Create" class="btn btn-primary">Create New Party</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Description</th>
            <th>Event Date</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var party in Model)
        {
            <tr>
                <td>@party.Description</td>
                <td>@party.EventDate.ToShortDateString()</td>
                <td>@party.Location</td>
                <td>
                    <a asp-controller="Parties" asp-action="Details" asp-route-id="@party.PartyId" class="btn btn-info">View</a>
                    <a asp-controller="Parties" asp-action="Edit" asp-route-id="@party.PartyId" class="btn btn-warning">Edit</a>
                    <a asp-controller="Parties" asp-action="Delete" asp-route-id="@party.PartyId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
