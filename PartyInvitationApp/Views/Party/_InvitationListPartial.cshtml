@model List<PartyInvitationApp.Models.PartyModels.Invitation>

@if (Model.Any())
{
    <table class="table invitation-table">
        <thead>
            <tr>
                <th>Guest Name</th>
                <th>Email</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var invitation in Model)
            {
                <tr>
                    <td>@invitation.GuestName</td>
                    <td>@invitation.GuestEmail</td>
                    <td>@invitation.Status</td>
                    <td>
                        <a asp-controller="Invitations" asp-action="RSVP" asp-route-id="@invitation.InvitationId" class="btn btn-rsvp">
                            RSVP
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-danger mt-3">No invitations have been sent yet.</p>
}
