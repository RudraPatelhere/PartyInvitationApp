@model List<PartyInvitationApp.Models.PartyModels.Party>

@{
    ViewData["Title"] = "Home - Party Manager";
}

<h2 class="text-center text-primary mt-3">Party Manager</h2>
<p class="text-center">Manage your parties and invitations here.</p>

<div class="text-end mb-3">
    <a asp-controller="Party" asp-action="Create" class="btn btn-primary">Create New Party</a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Description</th>
            <th>Event Date</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var party in Model)
        {
            <tr>
                <td>@party.Description</td>
                <td>@party.EventDate.ToShortDateString()</td>
                <td>@party.Location</td>
                <td>
                    <a asp-controller="Party" asp-action="Details" asp-route-id="@party.PartyId" class="btn btn-info btn-sm">View</a>
                    <a asp-controller="Party" asp-action="Edit" asp-route-id="@party.PartyId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-controller="Party" asp-action="Delete" asp-route-id="@party.PartyId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
